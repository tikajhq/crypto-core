{
  "name": "crypto-core",
  "version": "1.0.0",
  "description": "Universal cryptocurrency transaction server supporting 11+ major cryptocurrencies with real-time monitoring and WebSocket API",
  "main": "server.js",
  "keywords": [
    "cryptocurrency",
    "bitcoin",
    "ethereum",
    "blockchain",
    "wallet",
    "transaction",
    "api",
    "websocket",
    "multi-currency",
    "crypto",
    "fintech"
  ],
  "homepage": "https://github.com/tikajhq/crypto-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/tikajhq/crypto-core.git"
  },
  "bugs": {
    "url": "https://github.com/tikajhq/crypto-core/issues"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "test": "mocha \"./modules/**/tests/*.js\"",
    "test:coverage": "nyc mocha \"./modules/**/tests/*.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "apidoc -i modules/currencies/routes/ -o docs/api/",
    "docker:build": "docker build -t crypto-core .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "setup": "node dev/scripts/setup_admin.py"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "author": "Madhurendra Sachan <madhurendra@tikaj.com>",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "amqplib": "^0.5.2",
    "bitcoin-core": "^2.0.0",
    "bitcoind-rpc": "^0.7.1",
    "bitcoinjs-lib": "^3.3.2",
    "chai": "^4.1.2",
    "coininfo": "git+https://github.com/m301/coininfo.git",
    "coinkey": "^2.0.0",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-util": "^5.1.5",
    "ethereumjs-wallet": "^0.6.0",
    "express": "^4.16.3",
    "it-each": "^0.3.1",
    "lodash": "^4.17.5",
    "mocha-each": "^1.1.0",
    "mongodb": "^3.0.5",
    "node-dogecoin": "^0.3.9",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "ripple-lib": "^0.17.9",
    "web3": "^1.0.0-beta.33",
    "winston": "^3.0.0-rc3",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "mocha": "^4.1.0",
    "mochawesome": "^3.0.2"
  }
}
